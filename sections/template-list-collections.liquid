<div class="flex flex-col items-center my-8">
  <h1 class="text-3xl font-medium">{{ section.settings.title }}</h1>

  <div class="max-w-6xl mx-auto my-3">
    <div class="grid grid-cols-1 md:grid-cols-3">
      {% for collection in collections %}
        {% if collection.products_count > 0 %}
          <div class="w-full py-3 px-3">
            <div class="border bg-white overflow-hidden">
              <a href="{{ collection.url }}">
                <div class="aspect-square w-full overflow-hidden">
                  {% if collection.featured_image != blank %}
                    {% assign collection_image = collection.featured_image %}

                  {% else %}
                    {% assign collection_image = collection.products.first.featured_image %}
                  {% endif %}

                  <img
                    src="{{ collection_image |  image_url: width: 250 }}"
                    alt="{{ collection_image.alt }}"
                    width="auto"
                    height="auto"
                    class="object-cover w-full h-full hover:scale-105 transition duration-500 ease-out"
                  >
                </div>
              </a>
              <div class="p-4 bg-gray-100">
                <h2 class="text-xl">{{ collection.title }}</h2>
              </div>
            </div>
          </div>
        {% endif %}
      {% endfor %}
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Template List Collections",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "default": "Collections",
      "label": "Title"
    }
  ]
}
{% endschema %}
