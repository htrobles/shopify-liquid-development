<div class="w-full py-6 px-3">
  <div class="border bg-white shadow-lg rounded-lg overflow-hidden h-full">
    <a href="{{ product.url }}">
      {% if product.featured_image %}
        <div class="aspect-square w-full overflow-hidden">
          <img
            src="{{ product.featured_image |  image_url: width: 500  }}"
            alt="{{ product.featured_image.alt }}"
            width="auto"
            height="auto"
            class="w-full h-full object-cover"
          >
        </div>

      {% else %}
        {{ 'product-1' | placeholder_svg_tag: 'aspect-square w-full object-cover bg-gray-100' }}
      {% endif %}
    </a>

    <div class="flex flex-col p-4">
      <span class="text-sm text-gray-400">{{ product.vendor }}</span>
      <a href="{{ product.url }}" class="text-gray-700 uppercase font-medium">{{ product.title }}</a>
      <p class="text-gray-500">{{ product.price | money }}</p>
    </div>
  </div>
</div>
